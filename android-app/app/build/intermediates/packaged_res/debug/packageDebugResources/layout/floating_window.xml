<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Floating Button (Always Visible) -->
    <Button
        android:id="@+id/floatingButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="top|end"
        android:layout_margin="16dp"
        android:text="+"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:background="@drawable/floating_button_background"
        android:gravity="center" />

    <!-- Expanded View (Hidden by default) -->
    <LinearLayout
        android:id="@+id/expandedView"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:background="@drawable/expanded_view_background"
        android:visibility="gone"
        android:padding="12dp">

        <!-- Header with Close Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="WhatsApp Summary"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/whatsapp_green" />

            <Button
                android:id="@+id/closeBtn"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="Ã—"
                android:textSize="18sp"
                android:padding="0dp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Messages Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recent Messages:"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_marginBottom="4dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="8dp"
            android:background="@android:drawable/dialog_frame">

            <TextView
                android:id="@+id/messagesText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No messages"
                android:padding="6dp"
                android:textSize="11sp" />
        </ScrollView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/summarizeBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Summarize"
                android:textSize="12sp"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/clearBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Clear"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Summary Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Summary:"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_marginBottom="4dp" />

        <ProgressBar
            android:id="@+id/loadingProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:layout_marginBottom="4dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@android:drawable/dialog_frame">

            <TextView
                android:id="@+id/summaryText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:textSize="11sp" />
        </ScrollView>

    </LinearLayout>

</FrameLayout>
